{
  "name": "Omnibear",
  "version": "2.0.2",
  "description": "A micropub browser extension",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox --mv3",
    "dev:server": "node --env-file=e2e/server/.env.test e2e/server/test-server.js",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox --mv3",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint . --ext .js,.ts,.jsx,.tsx,.json,.md",
    "lint:fix": "eslint . --fix --ext .js,.ts,.jsx,.tsx,.json,.md",
    "check": "npm run format:check && npm run lint:check",
    "postinstall": "wxt prepare",
    "test": "vitest",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keithjgrant/omnibear.git"
  },
  "keywords": [
    "micropub"
  ],
  "author": "Keith J. Grant",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keithjgrant/omnibear/issues"
  },
  "homepage": "https://omnibear.com",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@indiekit/indiekit": "^1.0.0-beta.25",
    "@indiekit/store-file-system": "^1.0.0-beta.25",
    "@preact/preset-vite": "^2.10.2",
    "@types/jsdom": "^27.0.0",
    "@webext-core/fake-browser": "^1.3.4",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16",
    "wxt": "^0.20.13"
  },
  "dependencies": {
    "@preact/signals": "^2.5.1",
    "microformats-parser": "^2.0.4",
    "micropub-helper": "^2.0.1",
    "preact": "^10.28.2"
  },
  "lint-staged": {
    "*.{css,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
